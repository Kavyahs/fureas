<div class="modal-dialog sign-up-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close modal-close-btn" data-dismiss="modal">
                            <span aria-hidden="true" class="icons-close-with-circle"></span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title"><span class="icons-modal-logo"> </span></h4>
                    </div>
                    <div class="modal-body text-center">



<div class="form-align">
<%= form_for :user, :url => users_path, :method =>'post' do |f| %>

<div class="form-group">
  <%= f.text_field :name, :id=>"name",:class=>"form-control", :placeholder=>" Name"%>
      <label class="error" id="label_error" for="name"> </label>
  <%= f.text_field :email, :id=>"email",:class=>"form-control", :placeholder=>"E-mail"%>
       <label class="error" id="label_error" for="email"> </label>
       <%= f.select :gender, options_for_select([["Male", "1"], ["Female", "2"]]),  :id=>"gender",:class=>"form-control", :prompt =>"select gender" %>
  <%= f.text_field :contact_number, :id=>"contact_number",:class=>"form-control", :placeholder=>"Contact Number"%>
       <label class="error" id="label_error" for="contact_number"> </label>
       <%= f.text_area :address, :id=>"address",:class=>"form-control", :placeholder=>"Address"%>
       <label class="error" id="label_error" for="address"> </label>
       <%= f.text_field :state, :id=>"state",:class=>"form-control", :placeholder=>"State"%>
       <label class="error" id="label_error" for="state"> </label>
       <%= f.text_field :country, :id=>"country",:class=>"form-control", :placeholder=>"Country"%>
       <label class="error" id="label_error" for="country"> </label>

       <%= f.file_field :image, :id=>"image", :placeholder=>" Upload image"%>

      <div class="col-6 col-sm-offset-0">
      <%= f.submit "CREATE DETAILS", :class=>"btn btn-danger" %>

      </div>
    </div>
  <% end %>
  </div>
  <div class="signingup">By signing up, you agree to our <a href="">Terms of Service </a> </div>
                    </div>
                </div>
            </div>